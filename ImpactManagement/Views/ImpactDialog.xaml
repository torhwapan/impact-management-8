<Window x:Class="ImpactManagement.Views.ImpactDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Impact" Height="600" Width="600" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" MinWidth="500" MinHeight="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Impact Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Scene Name:" FontWeight="SemiBold"/>
                <TextBox Name="TxtSceneName" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Impact Name:" FontWeight="SemiBold"/>
                <TextBox Name="TxtImpactName" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Connect Name:" FontWeight="SemiBold"/>
                <ComboBox Name="CmbConnectName" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="SQL (重要内容):" FontWeight="SemiBold" Foreground="Red"/>
                <TextBox Name="TxtSql" 
                         MinHeight="120" MaxHeight="200"
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Group Field:" FontWeight="SemiBold"/>
                <TextBox Name="TxtGroupField" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Separator Margin="0,10"/>
                <TextBlock Text="Replace Items" FontWeight="Bold" Margin="0,5"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox Name="TxtNewReplaceItem" Width="250" Padding="5" Margin="0,0,5,0"/>
                    <Button Name="BtnAddItem" Content="Add Item" Padding="10,5" Click="BtnAddItem_Click"/>
                </StackPanel>

                <ListBox Name="LstReplaceItems" Height="120" Margin="0,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" Width="200"/>
                                <Button Content="Remove" Padding="5,2" Margin="10,0,0,0" Click="BtnRemoveItem_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="BtnSave" Content="Save" Width="80" Height="30" Margin="0,0,10,0" 
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnSave_Click"/>
            <Button Name="BtnCancel" Content="Cancel" Width="80" Height="30" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
