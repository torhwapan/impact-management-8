<UserControl x:Class="ImpactManagement.Views.ImpactExecuteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImpactManagement.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1400">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Impact Execute" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Selection Panel -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Scene Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding SceneNames}" 
                          SelectedItem="{Binding SelectedSceneName}" Margin="5,0"/>

                <TextBlock Grid.Column="3" Text="Impact Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox Grid.Column="4" ItemsSource="{Binding ImpactNames}" 
                          SelectedItem="{Binding SelectedImpactName}" Margin="5,0"/>
            </Grid>
        </Border>

        <!-- SQL and Connection Info Panel -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Connection Info -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Connection: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ConnectionInfo}" Foreground="Blue"/>
                </StackPanel>

                <!-- SQL Display -->
                <TextBlock Grid.Row="1" Text="SQL Statement (重要):" FontWeight="SemiBold" Foreground="Red" Margin="0,5,0,5"/>
                <Border Grid.Row="2" BorderBrush="#999999" BorderThickness="1" Background="#F5F5F5" Padding="8" Margin="0,0,0,10">
                    <TextBox Text="{Binding Sql, Mode=OneWay}" 
                             IsReadOnly="True"
                             MinHeight="80"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalScrollBarVisibility="Auto"/>
                </Border>

                <!-- Replace Items Panel -->
                <StackPanel Grid.Row="3" Visibility="{Binding HasReplaceItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Replace Items:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding ReplaceItemValues}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Item}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Query Results Panel -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Query Button and Filter Panel -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Command="{Binding QueryCommand}" Content="Execute Query" 
                        Padding="15,8" FontWeight="SemiBold" Background="#4CAF50" 
                        Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
                <Button Command="{Binding ExportCommand}" Content="Export to CSV" 
                        Padding="15,8" Margin="0,0,20,0"/>

                <!-- Group Filter -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding HasGroupField, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Filter by Group:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding GroupFieldValues}" 
                              SelectedItem="{Binding SelectedGroupFieldValue}" 
                              MinWidth="150"/>
                </StackPanel>
            </StackPanel>

            <!-- Results DataGrid (重要内容) -->
            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="2" Background="White">
                <DataGrid ItemsSource="{Binding QueryResults}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          AlternatingRowBackground="#F9F9F9"
                          GridLinesVisibility="All"
                          HeadersVisibility="All"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="BorderBrush" Value="#1976D2"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Border>

            <!-- Actions Panel -->
            <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,10,0,0"
                    Visibility="{Binding Actions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Related Actions:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <DataGrid ItemsSource="{Binding Actions}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              MaxHeight="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Action Description" Binding="{Binding ActionDesc}" Width="2*"/>
                            <DataGridTextColumn Header="Op Owner" Binding="{Binding OpOwner}" Width="*"/>
                            <DataGridTextColumn Header="Action Owner" Binding="{Binding ActionOwner}" Width="*"/>
                            <DataGridTextColumn Header="Action Tool" Binding="{Binding ActionTool}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
