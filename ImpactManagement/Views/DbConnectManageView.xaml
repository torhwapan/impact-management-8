<UserControl x:Class="ImpactManagement.Views.DbConnectManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="DB Connect Management" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Main Content -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding DbConnects}"
                  SelectedItem="{Binding SelectedDbConnect}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Connect Name" Binding="{Binding ConnectName}" Width="*"/>
                <DataGridTextColumn Header="IP" Binding="{Binding Ip}" Width="*"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="Auto"/>
                <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Command="{Binding AddCommand}" Content="Add" Width="100" Height="35" 
                    Margin="0,0,10,0" Background="#4CAF50" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0"/>
            <Button Command="{Binding EditCommand}" Content="Edit" Width="100" Height="35" 
                    Margin="0,0,10,0" Background="#2196F3" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0"/>
            <Button Command="{Binding DeleteCommand}" Content="Delete" Width="100" Height="35" 
                    Background="#F44336" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>
