<Window x:Class="ImpactManagement.Views.ActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Action" Height="500" Width="500" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Action Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Impact Name:" FontWeight="SemiBold"/>
                <ComboBox Name="CmbImpactName" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Group Field Value:" FontWeight="SemiBold"/>
                <TextBox Name="TxtGroupFieldValue" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Action Description:" FontWeight="SemiBold"/>
                <TextBox Name="TxtActionDesc" 
                         MinHeight="80"
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Op Owner:" FontWeight="SemiBold"/>
                <TextBox Name="TxtOpOwner" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Action Owner:" FontWeight="SemiBold"/>
                <TextBox Name="TxtActionOwner" Padding="5" FontSize="14" Margin="0,0,0,10"/>

                <Label Content="Action Tool:" FontWeight="SemiBold"/>
                <TextBox Name="TxtActionTool" Padding="5" FontSize="14" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="BtnSave" Content="Save" Width="80" Height="30" Margin="0,0,10,0" 
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnSave_Click"/>
            <Button Name="BtnCancel" Content="Cancel" Width="80" Height="30" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
